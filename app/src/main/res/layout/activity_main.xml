<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/nord0">


    <ImageView
        android:id="@+id/imageViewCenter"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/disneyviewer_logo" />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewCenter"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:hint="Email"
        android:fontFamily="@font/eczar"
        android:textColorHint="@color/nord3"
        android:inputType="textEmailAddress"
        android:textColor="@color/nord4"
        android:minHeight="48dp"
        android:minWidth="200dp"/>

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextEmail"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:hint="Password"
        android:fontFamily="@font/eczar"
        android:textColorHint="@color/nord3"
        android:inputType="textPassword"
        android:textColor="@color/nord4"
        android:minHeight="48dp"
        android:minWidth="200dp"/>

    <Button
        android:id="@+id/ButtonLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextPassword"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:fontFamily="@font/eczar"
        android:textSize="16sp"
        android:textColor="@color/nord4"
        android:background="@drawable/button_style"
        app:backgroundTint="@null"
        android:text="Login" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ButtonLogin"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto"
        android:text="Or, login with"
        android:layout_centerHorizontal="true"
        android:textColor="@color/nord4"
        />

    <LinearLayout
        android:id="@+id/linearLayoutImages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ButtonLogin"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewGoogle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/googlelogo"
            android:layout_marginTop="60dp"/>

        <ImageView
            android:id="@+id/imageViewGithub"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/githublogo"
            android:layout_marginTop="55dp"
            android:layout_marginStart="16dp"/>

        <ImageView
            android:id="@+id/imageViewSpotify"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/spotifylogo"
            android:layout_marginTop="60dp"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutRegistration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayoutImages"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewDontHaveAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account?"
            android:fontFamily="@font/roboto"
            android:textColor="@color/nord4"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/textViewRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="Register"
            android:fontFamily="@font/roboto"
            android:textColor="@color/nord4"
            android:layout_centerVertical="true"/>

    </LinearLayout>

</RelativeLayout>
